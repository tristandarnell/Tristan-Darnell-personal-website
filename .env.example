SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token
# Optional but recommended. Used as fallback for "View my Spotify profile".
SPOTIFY_PROFILE_URL=https://open.spotify.com/user/your_spotify_user_id
# Optional public fallback for client-side link rendering.
NEXT_PUBLIC_SPOTIFY_PROFILE_URL=https://open.spotify.com/user/your_spotify_user_id
# Optional. If not set, the app uses {origin}/api/spotify/callback.
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback
